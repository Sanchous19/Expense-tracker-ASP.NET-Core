@model Tracker.ViewModels.RecordViewModel


<form method="post" asp-controller="InternalRecord" asp-action="Add">
    <div asp-validation-summary="ModelOnly" style="color:red"></div>
    <div class="form-group">
        <label asp-for="Thing"></label>
        <input class="form-control" asp-for="Thing" />
        <span asp-validation-for="Thing" style="color:red"></span>
    </div>
    <div class="form-group">
        <label asp-for="Cost"></label>
        <input class="form-control" asp-for="Cost" />
        <span asp-validation-for="Cost" style="color:red"></span>
    </div>
    <div class="form-group">
        <label asp-for="Description"></label>
        <input class="form-control" asp-for="Description" />
    </div>
    <div class="form-group">
        <label asp-for="Date"></label>
        <input class="form-control" type="date" asp-for="Date" />
    </div>
    <button class="btn btn-primary" type="submit">
        @Localizer["Enter"]
    </button>
</form>
